{
  "name": "tdex-daemon",
  "version": "1.0.0",
  "description": "Daemon for Liquidity Providers to execute automated market marking strategies on top of TDEX",
  "main": "dist/index.js",
  "author": "Marco Argentieri",
  "license": "MIT",
  "scripts": {
    "watch": "npx tsc --watch",
    "build": "npx tsc",
    "lint": "npx tsc --noEmit && npx eslint 'src/**/*.ts' --quiet",
    "start": "npx ts-node src",
    "test": "npx jest test"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "bip32": "^2.0.5",
    "bip39": "^3.0.2",
    "enquirer": "^2.3.5",
    "google-protobuf": "^3.11.4",
    "grpc": "^1.24.2",
    "liquidjs-lib": "vulpemventures/liquidjs-lib",
    "nedb": "^1.8.0",
    "path": "^0.12.7",
    "tdex-protobuf": "sevenlab/tdex-protobuf",
    "tdex-sdk": "sevenlab/tdex-sdk",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/google-protobuf": "^3.7.2",
    "@types/nedb": "^1.8.9",
    "@types/node": "^13.13.0",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^25.3.0",
    "prettier": "^2.0.4",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  }
}
