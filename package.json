{
  "name": "tdex-daemon",
  "version": "1.0.0",
  "description": "Daemon for Liquidity Providers to execute automated market marking strategies on top of TDEX",
  "main": "dist/index.js",
  "author": "Marco Argentieri",
  "license": "MIT",
  "bin": {
    "tdex-daemon": "./dist/index.js"
  },
  "scripts": {
    "watch": "npx tsc --watch",
    "build": "npx tsc",
    "build-mac": "yarn build && npx nexe dist/index.js -t darwin-x64 -o bin/tdex-daemon-darwin",
    "build-linux": "yarn build &&  npx nexe dist/index.js -t linux-x64 -o bin/tdex-daemon-linux",
    "start": "npx ts-node src",
    "lint": "bash scripts/lint",
    "clean": "bash scripts/clean",
    "test": "bash scripts/test"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.0.4",
    "axios": "^0.19.2",
    "bip32": "^2.0.5",
    "bip39": "^3.0.2",
    "enquirer": "^2.3.5",
    "liquidjs-lib": "vulpemventures/liquidjs-lib",
    "nedb": "^1.8.0",
    "path": "^0.12.7",
    "tdex-protobuf": "sevenlab/tdex-protobuf",
    "tdex-sdk": "sevenlab/tdex-sdk",
    "winston": "^3.2.1",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/nedb": "^1.8.9",
    "@types/node": "^13.13.1",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.3",
    "grpc": "^1.24.2",
    "grpc-tools": "^1.8.1",
    "husky": "^4.2.5",
    "jest": "^25.3.0",
    "nexe": "^3.3.2",
    "prettier": "^2.0.4",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.8.2",
    "ts-protoc-gen": "^0.12.0",
    "typescript": "^3.8.3"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.(ts)$": "ts-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "bash scripts/lint"
    }
  }
}
